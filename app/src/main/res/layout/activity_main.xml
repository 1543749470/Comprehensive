<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <com.example.myapplication.utils.video.AliyunRenderView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/main_ali" />
        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="0"
            android:max="100"
            android:id="@+id/main_seek"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/main_time"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:id="@+id/main_bf"
                android:background="@color/imagepicker_blue"
                android:text="开始" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:id="@+id/main_tz"
                android:background="@color/imagepicker_blue"
                android:text="停止" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:id="@+id/main_zt"
                android:background="@color/imagepicker_blue"
                android:text="暂停" />

        </LinearLayout>
    </LinearLayout>
</layout>