<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">


    <TextView
        android:layout_width="wrap_content"
        android:text="视频播放"
        android:id="@+id/home_spbf"
        android:padding="@dimen/dp_10"
        android:textColor="@color/white"
        android:background="@color/imagepicker_blue"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="短视频"
        android:padding="@dimen/dp_10"
        android:background="@color/imagepicker_blue"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="@color/white"
        android:id="@+id/home_dsp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TabLayout"
        android:padding="@dimen/dp_10"
        android:background="@color/imagepicker_blue"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="@color/white"
        android:id="@+id/home_tab"/>

    <com.github.ybq.android.spinkit.SpinKitView
        android:layout_width="200dp"
        android:layout_gravity="center"
        style="@style/SpinKitView.Large.MultiplePulse"
        app:SpinKit_Color="@color/purple_200"
        android:layout_height="200dp"/>
    <com.example.myapplication.utils.attachButton.AttachButton
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:background="@drawable/bag_att"
        app:customIsDrag="true"
        android:text="首页"
        android:gravity="center"
        app:customIsAttach="true"
        android:layout_gravity="right"
        android:id="@+id/main_att"
        />
</LinearLayout>